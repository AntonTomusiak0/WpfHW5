<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal" Background="Beige">
        <Label Content="Todo list" FontSize="36" FontWeight="Bold"/>
        <StackPanel>
            <TextBox x:Name="TitleTextBox" Width="300" FontSize="24"/>
            <Button Content="Add" FontSize="24" Click="OnAddClick" Background="SlateGray"/>
            <Button Content="Clear" FontSize="24" Click="OnClearClick" Background="SlateGray"/>
        </StackPanel>
        <StackPanel x:Name="TodoListPanel">
            
        </StackPanel>
    </StackPanel>
</Window>
