<UserControl x:Class="WpfApp7.Components.TodoComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp7.Components"
             mc:Ignorable="d" >
    <StackPanel Background="White" Orientation="Horizontal" VerticalAlignment="Center">
        <Label Content="Hello World" FontSize="26" x:Name="TitleLabel" Loaded="TitleLabel_Loaded"/>
        <Button Content="Complete" FontSize ="20" Margin="0 0 15 0" Click="OnCompleteClick" x:Name="CompleteButton" Background="Green"/>
    <Button Content ="Delete" FontSize="20" Click="OnDeleteClick" Background="Red"/>
    </StackPanel>
</UserControl>
